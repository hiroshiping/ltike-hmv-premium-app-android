<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/menuSpace" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="0dp"
        android:orientation="horizontal" >



        <LinearLayout
            android:id="@+id/twocolumn_layout1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@color/carouselBackImage">

            <ImageView
                android:id="@+id/twocolumn_image1"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY" />

            <include layout="@layout/component_shadow_content" /> <!--影-->

        </LinearLayout>

        <!--スペース-->
        <Space
            android:layout_height="match_parent"
            android:layout_width="5dp" />

        <!--右の画像-->
        <LinearLayout
            android:id="@+id/twocolumn_layout2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@color/carouselBackImage">

            <ImageView
                android:id="@+id/twocolumn_image2"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY" />

            <include layout="@layout/component_shadow_content" /> <!--影-->

        </LinearLayout>

    </LinearLayout>

</LinearLayout>