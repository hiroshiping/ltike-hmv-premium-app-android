<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="@dimen/activity_vertical_margin"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/check_box_button"
            android:layout_width="@dimen/check_box_size"
            android:layout_height="@dimen/check_box_size"
            android:background="@drawable/checkbox_blank_outline"/>

        <TextView
            android:id="@+id/check_box_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_size_m"
            android:layout_marginLeft="@dimen/app_horizontal_half_margin"
            tools:text="CHECK BOXCHECK BOXCHECK BOXCHECK BOXCHECK BOXCHECK BOXCHECK BOX"
            android:gravity="center_vertical" />
    </LinearLayout>

</RelativeLayout>