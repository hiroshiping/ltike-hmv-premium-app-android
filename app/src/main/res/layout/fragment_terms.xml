<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="jp.co.lhe.lhememberapp.fragments.TermsFragment">

    <!-- Action Bar -->
    <!--<include-->
        <!--android:visibility="gone"-->
        <!--android:id="@+id/sub_view_action_bar"-->
        <!--layout="@layout/sub_view_action_bar"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="@dimen/action_bar_height"></include>-->


        <RelativeLayout
            android:id="@+id/fragment_guidance_how_to_block"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/app_cell_padding">

            <ImageButton
                android:id="@+id/fragment_guidance_how_to_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:background="@mipmap/cell_arrow_right"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_size_m"
                android:text="@string/guidance_how_to_label"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/dividerColor"></View>

        <RelativeLayout
            android:id="@+id/fragment_guidance_faq_block"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/app_cell_padding"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_size_m"
                android:text="@string/guidance_faq_label"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>
            <ImageButton
                android:id="@+id/fragment_guidance_faq_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:background="@mipmap/cell_arrow_right"/>

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/dividerColor"></View>

        <RelativeLayout
            android:id="@+id/fragment_guidance_terms_block"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/app_cell_padding"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_size_m"
                android:text="@string/guidance_terms_label"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>
            <ImageButton
                android:id="@+id/fragment_guidance_terms_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:background="@mipmap/cell_arrow_right"/>

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/dividerColor"></View>

        <RelativeLayout
            android:id="@+id/fragment_policy_terms_block"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/app_cell_padding"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_size_m"
                android:text="@string/policy_terms_label"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>
            <ImageButton
                android:id="@+id/fragment_policy_terms_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:background="@mipmap/cell_arrow_right"/>

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/dividerColor"></View>

        <RelativeLayout
            android:id="@+id/fragment_license_terms_block"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/app_cell_padding"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_size_m"
                android:text="@string/license_terms_label"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>
            <ImageButton
                android:id="@+id/fragment_license_terms_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:background="@mipmap/cell_arrow_right"/>

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/dividerColor"></View>

        <TextView
            android:id="@+id/fragment_terms_app_version"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/app_cell_padding"
            android:gravity="left"
            android:textSize="@dimen/font_size_m"
            tools:text="バージョン情報：4.5.1"/>


</LinearLayout>
